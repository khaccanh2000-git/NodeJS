<div class="container mt-5 ">
    <a href="/" class="btn btn-info mb-5" > Return Home </a>
    <div class="form-group">
        <form action="/cart/order" method="POST">
            <h4>Address</h4>
            <input name="address" required type="text" class=" form-control mb-3" placeholder="Enter address">
      
            <table class="table table-hover">
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
    <%

    products.forEach(product => {%>
            
            <tr>
                <td><%= product.item.name %></td>
                <td><%= product.qty %></td>
                <td><%= product.qty*product.item.price %></td>
            </tr>
            
    <%})
    %>
</table>
    <div class="total">
        <h1>Total: <%= total %></h1>  
        <input type="submit" placeholder="Order" name="order" value="Order" class="btn btn-info px-5 mb-5 ">  
    </div>

</form>
        

    </div>
</div>