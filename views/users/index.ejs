<div class="container mt-5">
    <a type="button" class="btn btn-primary btn-lg" href="/user/register">Register New user</a>

    <%- include('../part/message') %>
    <h1>List User</h1>
    <table class="table table-hover">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <%
        users.map(user=>{%>
            <tr>
                <td><%=  user.name %></td>
                <td><%=  user.email %></td>
                <td><%=  user.password %></td>
                <td><a href="/" class="btn btn-warning">Edit</a></td>
                <td>
                   <%- include('../part/deleteForm',{url:`/user/${user._id}?_method=delete`}) %>
                </td>
            </tr>
        <%})
        %>
        
    </table>
</div>